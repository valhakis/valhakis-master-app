extends ./layout

block content
   h1 Create a new item.

   div.container
      form(method="POST", action="/items/create", enctype="multipart/form-data")
         div.form-group
            label Item Name
            input.form-control(type="text", name="name")
         div.form-group
            label Item Image
            input.form-control(type="file", name="image")
         div.form-group
            label Item Image Url
            input.form-control(type="url", name="imgurl")
         button(type="submit", class="btn btn-default") Add new item
